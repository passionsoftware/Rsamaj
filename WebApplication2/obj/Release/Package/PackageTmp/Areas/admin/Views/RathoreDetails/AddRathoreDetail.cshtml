    ViewBag.Title = "AddRathoreDetail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1 style="color:#146eb0;text-align:left">नया राठौर जानकारी भरे  </h1>
<hr />
<ol class="breadcrumb">
    <li><a href="#">प्रारम्भ</a></li>
    <li><a href="#">राठौर जानकारी</a></li>
    <li class="active">नया जानकारी</li>
</ol>
<div class="col-lg-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            जरूरी जानकारी 
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12 col-sm-4 col-lg-4">
                    <div class="form-group">
                        <label for="Name">पूरा नाम</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Full Name", @maxlength = 100 })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-12 col-sm-4 col-lg-4">
                    <div class="form-group">
                        <label for="FatherName">पिता का नाम </label>
