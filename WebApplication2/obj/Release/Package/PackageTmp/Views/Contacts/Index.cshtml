@model RS.DataModel.ContactModel
@{
    ViewBag.Title = "Contact";
}

<div class="form-group">
    <div class="row">
        <div class="col-md-10 col-md-offset-1 headerText">
            संपर्क करें
        </div>
    </div>
    <div class="row" style="margin-top:30px;">
        <div class="col-md-10 col-md-offset-1">
            वेबसाइट मे कुछ नए नाम , कार्यक्रम या लिखे हुए जानकारी को बदलने के लिए कृपया निचे दिए देय फॉर्म भरे या दिए हुए सदस्यों से समपर्क साधे| आप को अगर वेबसाइट मे अपने अनुरूप या अपने कराये के अनुरूप कुछ विगयपन देना है तो उपयुक्त लोगो से संपर्क करे.
        </div>
    </div>

    <div class="row" style="margin-top:30px;">
           
            @using (Html.BeginForm("Index", "Contacts", FormMethod.Post, new { role = "form", @novalidate = "novalidate" }))
            {
                <div class="col-md-offset-1 col-md-6">
                    <div class="row">
                        @if (ViewBag.Saved == true)
                        {
                            <div class="alert alert-success" role="alert">@ViewBag.Message</div>
                        }
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="form-group">
                                <label for="Name">पूरा नाम</label> <span class="text-required">*</span>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Full Name", @maxlength = 50 })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-error" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="PhoneNumber">फ़ोन नंबर</label> <span class="text-required">*</span>
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number", @maxlength = 10 })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-error" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="EmailId">ईमेल</label>
                                @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", placeholder = "EmailId", @maxlength = 100 })
                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-error" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="Subject">विषय</label> <span class="text-required">*</span>
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Subject", @maxlength = 100 })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-error" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="Subject">प्रधान भाग</label> <span class="text-required">*</span>
                                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", placeholder = "Body", @maxlength = 500, @height = 400 })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-error" })
                            </div>
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-danger">Submit</button>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-2">
                &nbsp;
            </div>
            <div class="col-md-4" style="font-size:20px;margin-top:20px;">
                <div class="row text-left" style="margin-left:20px">

                    <div class="col-md-12">
                        <b><u> अशोक राठौर</u> </b>
