@using RS.DataModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - राठौर समाज की जानकारी </title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    <div class="navbar navbar-inverse" style="border-bottom: 5px solid rgba(65, 226, 204, 0.6196078431372549)">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("राठौर समाज - एडमिन पोर्टल ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="float:right !important">

                <ul class="nav navbar-nav">

                    <li>  @Html.ActionLink("प्रारम्भ ", "Index", "Home")</li>

                    @if (Session["LoginSuccesFull"] != null && ((LoginModel)Session["LoginSuccesFull"]).Role != null && (((LoginModel)Session["LoginSuccesFull"]).Role == 1 || ((LoginModel)Session["LoginSuccesFull"]).Role == 2 ||
                                             ((LoginModel)Session["LoginSuccesFull"]).Role == 3 || ((LoginModel)Session["LoginSuccesFull"]).Role == 99))
                    {
                        <li>@Html.ActionLink("राठौर जानकारी", "Index", "RathoreDetails")</li>
                    }

                    @if (Session["LoginSuccesFull"] != null && ((LoginModel)Session["LoginSuccesFull"]).Role != null && (((LoginModel)Session["LoginSuccesFull"]).Role == 1 || ((LoginModel)Session["LoginSuccesFull"]).Role == 2 ||
                                                     ((LoginModel)Session["LoginSuccesFull"]).Role == 3 || ((LoginModel)Session["LoginSuccesFull"]).Role == 99))
                    {
                        <li>@Html.ActionLink("कार्यक्रम", "Index", "Events")</li>
                    }
                    @if (Session["LoginSuccesFull"] != null && ((LoginModel)Session["LoginSuccesFull"]).Role != null && (((LoginModel)Session["LoginSuccesFull"]).Role == 1 || ((LoginModel)Session["LoginSuccesFull"]).Role == 2 ||
                                                     ((LoginModel)Session["LoginSuccesFull"]).Role == 3 || ((LoginModel)Session["LoginSuccesFull"]).Role == 99))
                    {
                        <li>@Html.ActionLink("समाचार", "Index", "News")</li>
                    }
                    @*@if (Session["LoginSuccesFull"] != null && ((LoginModel)Session["LoginSuccesFull"]).Role != null && (((LoginModel)Session["LoginSuccesFull"]).Role == 1 || ((LoginModel)Session["LoginSuccesFull"]).Role == 2 ||
                                                                         ((LoginModel)Session["LoginSuccesFull"]).Role == 3 || ((LoginModel)Session["LoginSuccesFull"]).Role == 99))
                    {
                        <li>@Html.ActionLink("एल्बम", "Index", "Albums")</li>

                        <li>@Html.ActionLink("चित्र", "Index", "Gallary")</li>
                    }*@

                    @if (Session["LoginSuccesFull"] != null && ((LoginModel)Session["LoginSuccesFull"]).Role != null && (((LoginModel)Session["LoginSuccesFull"]).Role == 1 || ((LoginModel)Session["LoginSuccesFull"]).Role == 99))
                    {
                        <li>@Html.ActionLink("संपर्क ", "Index", "Contacts")</li>
                    }
                    <li> @Html.ActionLink("बहार निकले", "Index", "Login", new { Area = "Admin" }, new { @id = "Logout" } )  @*@Html.ActionLink("बहार निकले", "Index", "Login", new {  @id="Logout"})*@</li>
                   

                </ul>


                    
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
        <footer class="col-lg-12">
            <hr />
            <p style="margin-left:20px;">  &copy; Rathore  Samaj - @DateTime.Now.Year - <span style="color:orangered"> Designed and Code by <b> Passion software</b></span></p>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
</html>
<style>

    #Logout {
        color: red !important;
    }
</style>

